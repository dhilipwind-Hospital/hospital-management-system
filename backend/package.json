{
  "name": "hospital-website-backend",
  "version": "1.0.0",
  "description": "Backend for Hospital Website",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "migration:generate": "typeorm migration:generate -n",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "seed:services": "ts-node src/scripts/seed-services.ts",
    "seed:admin": "ts-node src/scripts/seed-admin.ts",
    "seed:doctor": "ts-node src/scripts/seed-doctor.ts",
    "seed:pharmacy": "ts-node src/scripts/seed-pharmacy.ts",
    "seed:pharmacist": "ts-node src/scripts/seed-pharmacist.ts",
    "test:email": "ts-node src/scripts/test-email.ts",
    "test": "jest -c jest.config.ts",
    "test:watch": "jest -c jest.config.ts --watch",
    "test:e2e": "jest -c jest.e2e.config.ts"
  },
  "dependencies": {
    "@nestjs/swagger": "^11.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.2",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "google-auth-library": "^10.4.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.7",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.13.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
